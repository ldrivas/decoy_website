<script>
  function goBack() {
    var currentPath = window.location.pathname;
    var segments = currentPath.split('/').filter(Boolean);

    if (segments.length > 1) {
      segments.pop();
      var newPath = '/' + segments.join('/') + '/';
      window.location.href = newPath;
    } else {
      window.location.href = "/";
    }
  }
</script>

